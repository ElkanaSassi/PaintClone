<Window x:Class="Client.UploadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Upload File" 
        Height="150" 
        Width="300" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    
    <StackPanel Margin="10">
        <TextBlock Text="Enter file name:" Margin="0,0,0,5"/>
        <TextBox x:Name="FileNameTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <!--TODO: make the buttons look nicer! -->
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
    
</Window>
